// Factorial through recursion in C

#include <stdio.h>

int fact(int n) {
    if (n == 0 || n == 1) {
        return 1;
    } else {
        return n * fact(n - 1);
    }
}

int main() {
    int n;
    printf("Enter the number: ");
    scanf("%d", &n);

    int res = fact(n);
    printf("The factorial of the number is %d\n", res);

    return 0;
}
